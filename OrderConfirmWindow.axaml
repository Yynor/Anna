<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Market.OrderConfirmWindow"
        Title="Market"
        Width="500"
        Height="650"
        WindowStartupLocation="CenterScreen"
        MinHeight="650" 
        MaxHeight="650" 
        MinWidth="500" 
        MaxWidth="500">
        
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
        <TextBlock x:Name="Cost" Text="Итого: 0 руб." FontSize="24" Margin="10"/>
        <TextBlock x:Name="Pick" Text="Адрес доставки: г. Москва, ул. Ленина, д. 1" FontSize="18" Margin="10"/>
        <Button Content="Подтвердить" Width="150" Height="30" Margin="10" Background="#4CAF50" Foreground="#FFFFFF" Click="ConfirmOrder_Click"/>
    </StackPanel>

            </Grid>

  
    
</Window>